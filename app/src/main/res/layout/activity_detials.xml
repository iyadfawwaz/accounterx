<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".BoxesActivity">

    <TextView
        android:layout_gravity="top|center_horizontal"
        android:gravity="center"
        android:id="@+id/textView17"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:text="@string/app_name" />

    <TextView
        android:id="@+id/detailTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="12dp"
        android:text="@string/profanddeprof"
        android:textColor="@color/lavender"
        android:textSize="24sp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/detailImage"
        android:contentDescription="@string/app_name"
        android:padding="8dp"
        android:layout_gravity="center"
        android:src="@drawable/lavender_border"
        android:scaleType="fitXY"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/detailLang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:padding="20dp"
            android:text="@string/profanddeprof"
            android:textColor="@color/lavender"
            android:textSize="18sp" />

    <TextView
        android:gravity="center"
        android:id="@+id/detailDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:padding="20dp"
        android:textColor="@color/lavender"
        android:textSize="18sp" />
    </LinearLayout>


    <com.google.android.material.bottomappbar.BottomAppBar
        android:id="@+id/bottomAppBar2"
        android:layout_width="match_parent"
        style="@style/Widget.MaterialComponents.BottomAppBar.PrimarySurface"
        android:layout_height="wrap_content"
        app:fabCradleMargin="12dp"
        app:fabAlignmentMode="end"
        android:layout_gravity="bottom" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/deleteButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="?android:attr/fingerprintAuthDrawable"
                app:fab_size="mini"
        app:layout_anchorGravity="start"
        app:fab_progress_color="@color/orange"
        app:fab_colorRipple="@color/purple_500"
        app:fab_colorPressed="@color/gre"
        app:fab_shadowColor="@color/white"
        app:layout_anchor="@id/bottomAppBar2"
                app:fab_progress="@integer/material_motion_duration_long_2"
                android:contentDescription="@string/app_name" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>